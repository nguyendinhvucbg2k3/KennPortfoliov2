{
  "entities": {
    "AdminProfile": {
      "title": "AdminProfile",
      "type": "object",
      "description": "Represents an administrator user profile.",
      "properties": {
        "uid": { "type": "string", "description": "Firebase Authentication UID." },
        "email": { "type": "string", "description": "Email address of the admin user.", "format": "email" },
        "displayName": { "type": "string", "description": "Display name of the admin user." },
        "photoURL": { "type": "string", "description": "URL of the admin's profile picture.", "format": "uri" }
      },
      "required": ["uid", "email", "displayName"]
    },
    "Project": {
      "title": "Project",
      "type": "object",
      "description": "Represents a graphic design project in the portfolio.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the project." },
        "slug": { "type": "string", "description": "URL-friendly slug for the project." },
        "name": { "type": "string", "description": "Title of the project." },
        "category": { "type": "string", "enum": ["Branding", "Illustration", "Art Direction", "Packaging", "Graphic Design", "UI/UX", "Web Design", "Game Design"] },
        "shortDescription": { "type": "string", "description": "A brief summary of the project." },
        "description": { "type": "string", "description": "Detailed description of the project." },
        "designPrinciples": { "type": "string", "description": "Design principles applied." },
        "image": {
          "type": "object",
          "properties": {
            "src": { "type": "string", "format": "uri" },
            "alt": { "type": "string" },
            "aiHint": { "type": "string" }
          },
          "required": ["src", "alt", "aiHint"]
        },
        "year": { "type": "number" },
        "behanceUrl": { "type": "string", "format": "uri" }
      },
      "required": ["id", "slug", "name", "category", "shortDescription", "description", "image", "year", "behanceUrl"]
    },
    "ResourceLink": {
      "title": "ResourceLink",
      "type": "object",
      "description": "Represents a link to an external design resource.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "category": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["id", "title", "url", "category", "description"]
    },
    "Experience": {
      "title": "Experience",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "organization": { "type": "string" },
        "date": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["id", "title", "organization", "date", "description"]
    },
    "Skill": {
      "title": "Skill",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "level": { "type": "number" },
        "description": { "type": "string" }
      },
      "required": ["id", "name", "level", "description"]
    },
    "PersonalInfo": {
        "title": "PersonalInfo",
        "type": "object",
        "properties": {
            "fullName": { "type": "string" },
            "footerName": { "type": "string" },
            "title": { "type": "string" },
            "fieldOfStudy": { "type": "string" },
            "dateOfBirth": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" },
            "phoneHref": { "type": "string" },
            "address": { "type": "string" }
        },
        "required": ["fullName", "footerName", "title", "fieldOfStudy", "dateOfBirth", "email", "phone", "phoneHref", "address"]
    }
  },
  "auth": {
    "providers": [
      "google"
    ]
  },
  "firestore": {
    "/projects/{projectId}": {
      "schema": { "$ref": "#/entities/Project" },
      "description": "Stores project details. Publicly readable, admin-writable."
    },
    "/resources/{resourceId}": {
      "schema": { "$ref": "#/entities/ResourceLink" },
      "description": "Stores resource links. Publicly readable, admin-writable."
    },
    "/experience/{experienceId}": {
      "schema": { "$ref": "#/entities/Experience" },
      "description": "Stores work experience. Publicly readable, admin-writable."
    },
    "/skills/{skillId}": {
        "schema": { "$ref": "#/entities/Skill" },
        "description": "Stores skills. Publicly readable, admin-writable."
    },
    "/personalInfo/main": {
        "schema": { "$ref": "#/entities/PersonalInfo" },
        "description": "Stores personal information. A single document. Publicly readable, admin-writable."
    },
    "/admins/{uid}": {
      "schema": { "$ref": "#/entities/AdminProfile" },
      "description": "Stores admin user profiles. The existence of a document here confers admin privileges."
    }
  }
}
